<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             x:Class="PM2E18836.Views.VerMapa">
    
    <ContentPage.Content>
        <StackLayout>
            <maps:Map HorizontalOptions="FillAndExpand"
                      VerticalOptions="FillAndExpand" x:Name="mapa" IsShowingUser="True"/>
            <Button Text="Compartir Imagen Ubicación" x:Name="btnCompartir" Margin="20,10,20,10" BackgroundColor="#8bc34a" CornerRadius="10" TextColor="Black" Clicked="btnCompartir_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>